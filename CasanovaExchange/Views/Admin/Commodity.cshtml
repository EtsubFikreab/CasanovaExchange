@using CasanovaExchange.ViewModel;
@model AddCommodityViewModel
@{
    Layout = "_Layout";
    ViewData["title"] = "Commodity";
}


<h4>Commodity Entry Form</h4>
<hr />

@if (TempData["error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span> @TempData["error"]</span>
    </div>
}
<form asp-controller="admin" asp-action="AddCommodity" enctype="multipart/form-data"
      method="post" class="mt-3">

   

    <div class="form-group row">
        <label asp-for="Commodity.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Commodity.Name" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Commodity.Symbol" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Commodity.Symbol" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Commodity.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Commodity.Description" class="form-control mb-2"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Commodity.ProductionYear" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Commodity.ProductionYear" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Commodity.CommodityWarehouse.WarehouseCode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Commodity.CommodityWarehouse.WarehouseCode" class="form-control mb-2" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Commodity.commodityImage" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-10">
            <input asp-for="Commodity.commodityImage" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary bm-2" />
    </div>
</form>


