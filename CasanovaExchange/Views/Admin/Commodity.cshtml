@using CasanovaExchange.Models;
@model Commodity
@{
    Layout = "_Layout";
    ViewData["title"] = "Commodity";
}


<h4>Commodity Entry Form</h4>
<hr />

@if (TempData["error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span> @TempData["error"]</span>
    </div>
}
<form asp-controller="admin" asp-action="Commodity" enctype="multipart/form-data"
      method="post" class="mt-3">

   

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Symbol" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Symbol" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.Description" class="form-control mb-2"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductionYear" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.ProductionYear" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CommodityWarehouse" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.CommodityWarehouse" class="form-control mb-2" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="commodityImage" class="col-sm-2 col-form-label mb-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.commodityImage" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary bm-2" />
    </div>
</form>


