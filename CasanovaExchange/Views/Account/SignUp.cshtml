@model CasanovaExchange.Models.SignUpModel

@{
    Layout = "_Layout";

    ViewData["title"] = "Sign up";
}

<h4>Registration Form</h4>
<hr />

<form asp-controller="Account" asp-action="SignUp" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control mb-2" style="width:20em" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control mb-2" style="width:20em ; "/>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" class="form-control mb-2" style="width:20em" />
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="role" class="col-sm-2 col-form-label">Role</label>
        <div class="col-sm-10">
            <input  asp-for="role" type="text" class="form-control mb-2" style="width:20em" />
        </div>
        <span asp-validation-for="role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="SignUp" class="btn btn-primary bm-2" />
    </div>
    @if (TempData["message"] != null)
    {
        <div class="col-md-12 alert alert-success">
            <span> @TempData["message"]</span>
        </div>
    }
</form>
