@using CasanovaExchange.Models;
@model Wallet
@{
	Layout = "_Layout";
	ViewBag.Title = "My Wallet";
}
<h1>My Wallet</h1>
<p><span class="balance-title">Current Balance:</span> <span class="Balance-number">@Model.Balance Birr</span></p>
<br />
<form asp-controller="Wallet" asp-action="AddMoney" enctype="multipart/form-data" method="post" class="mt-3 form-addMoney">
	<h3 class="">Add Money</h3>
	<div class="form-group">
		<label asp-for="Balance" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Balance" class="form-control mb-2 w-75" />
		</div>
	</div>
	<div class="form-group">
		<input type="submit" value="Add Balance" class="btn btn-primary bm-2" />
	</div>
</form>

<style>
	p {
		margin-top: 2ch;
		font-size: large;
		font-weight: 600;
	}

	.form-addMoney {
		background-color: #2E4057;
		padding:3ch;
		padding-inline:7ch;
		max-width:30vw;
		border-radius:10px;
	}

	.Balance-number {
		color: lawngreen;
	}
</style>